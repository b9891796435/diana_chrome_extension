{
    "name": "嘉然主题FireFox插件",
    "version": "2.3.4",
    "description": "嘉然，我真的好喜欢你啊，为了你，我要学React+TS+Chrome Extension",
    "background": {
        "persistent": false,
        "scripts": ["static/js/background.js"]
    },
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "permissions": [
        "storage",
        "topSites"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_icon": {
            "16": "logo192.png",
            "48": "logo192.png",
            "128": "logo192.png"
        },
        "default_title": "嘉然主题Chrome插件",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "static/js/content.js"
            ],
            "css": [
                "static/css/content.css"
            ],
            "matches": [
                "https://*/*",
                "http://*/*"
            ]
        }
    ],
    "manifest_version": 2
}